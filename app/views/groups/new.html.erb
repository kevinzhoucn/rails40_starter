<div class="row">
  <div class="col-md-8">
    <h1>New group</h1>    
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newGroupModal">Open</button>
    <div class="modal fade" id="newGroupModal" tabindex="-1" role="dialog" aria-labelledby="newGroupModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="newGroupModalLabel">New group</h4>
          </div>
          <div class="modal-body">
            <%= render 'form' %>
        </div>
      </div>
    </div>
  </div>
</div>